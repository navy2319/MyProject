<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="farm.entities.FarmEquip" table="farm_equipment">
        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="productId" type="int" column="product_id">
            <generator class="native"/>
        </id>
        <property name="productName" column="product_name" type="string"/>
        <property name="model" column="model" type="string"/>
        <property name="yearModel" column="year" type="string"/>
        <property name="description" column="description" type="string"/>
    </class>
</hibernate-mapping>